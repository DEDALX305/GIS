jQuery(function($){
	$(document).ready(function(){

		/*commentscroll*/
		$(".comment-scroll a").click(function(event){		
			event.preventDefault();
			$('html,body').animate({ scrollTop:$(this.hash).offset().top}, 'fast' );
		});
		
		/*scroll back to top */
		$("a.backtop").click(function(event){		
			event.preventDefault();
			$('html,body').animate({ scrollTop:0 }, 'fast' );
		});
		
	});
});